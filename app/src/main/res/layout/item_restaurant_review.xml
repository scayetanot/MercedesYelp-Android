<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.whatevrdev.domain.entities.YelpReview" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin">

            <androidx.cardview.widget.CardView
                android:id="@+id/profilePicView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:background="@color/red_blur"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@{item.user.name}"
                android:layout_marginStart="@dimen/default_margin"
                app:layout_constraintTop_toTopOf="@+id/profilePicView"
                app:layout_constraintStart_toEndOf="@+id/profilePicView"
                app:layout_constraintEnd_toStartOf="@+id/date"
                tools:text="name"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@{item.timeCreated}"
                android:layout_marginStart="@dimen/default_margin"
                app:layout_constraintTop_toTopOf="@+id/profilePicView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userName"
                tools:text="date"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@{item.rating.toString()}"
                android:layout_marginStart="@dimen/default_margin"
                app:layout_constraintBottom_toBottomOf="@+id/profilePicView"
                app:layout_constraintStart_toEndOf="@+id/profilePicView"
                tools:text="rating"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:textColor="@color/black"
            android:text="@{item.text}"
            tools:text="skfjqsdklfjqskldfjsdklfjslkdfjsfklsjfklsjfklsjfsklfjsklsdfjklsfjsklfjsklfjslkfjsklfjslfsflsjflqsjflsjfls"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/red_blur"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_height="1dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>